<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
android:orientation="horizontal"
android:weightSum="2">


  <TextView
    android:text="Label"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:textStyle="bold"
    android:id="@+id/tv_key" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
  <TextView
    android:text="Description"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:id="@+id/tv_desc"
    app:layout_constraintStart_toEndOf="@+id/tv_key" android:layout_marginTop="8dp"
    app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
</LinearLayout>
